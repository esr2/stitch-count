{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": ["node_modules"]
}
